1.) C++ Code

class Solution {
public:
    int mySqrt(int x) {
        int low=1;
        int high=x;
        while(low<=high){
            long long mid= low + (high-low)/2;
            long long sq=mid*mid;
            if(sq==x){
                return mid;
            }
            else if(sq<x){
                low=mid+1;
            }
            else {
                high=mid-1;
            }
        }
        return high;
    }
};


2.) Java Code

public class Solution {
    public int mySqrt(int x) {
        if (x < 2) {
            return x; // for x = 0 or 1, sqrt(x) is x itself
        }
        
        int left = 1, right = x / 2;
        
        while (left <= right) {
            int mid = left + (right - left) / 2;
            long guessSquared = (long) mid * mid; // use long to prevent overflow
            
            if (guessSquared == x) {
                return mid; // perfect square root found
            } else if (guessSquared < x) {
                left = mid + 1;
            } else {
                right = mid - 1;
            }
        }
        
        return right; // `right` will be the integer part of sqrt(x)
    }
}
